@article{edgerly_red_2015,
	title = {Red {Media}, {Blue} {Media}, and {Purple} {Media}: {News} {Repertoires} in the {Colorful} {Media} {Landscape}},
	volume = {59},
	issn = {08838151},
	shorttitle = {Red {Media}, {Blue} {Media}, and {Purple} {Media}},
	url = {http://0-search.ebscohost.com.wncln.wncln.org/login.aspx?direct=true&db=ufh&AN=101516130&site=eds-live},
	doi = {10.1080/08838151.2014.998220},
	abstract = {This study extends past research on news repertoires by examining how individuals combine news exposure across an array of media platforms and content. Results from a national survey reveal 6 distinct news repertoires. While some respondents have clear ideologically driven repertoires, others have repertoires that are best described as medium-centric. A closer look at socio-demographic factors and participation levels among the 6 news repertoires are also explored. Results shed light on the democratic implications of the high-choice media landscape and research on news exposure and effects.},
	number = {1},
	urldate = {2015-09-02},
	journal = {Journal of Broadcasting \& Electronic Media},
	author = {Edgerly, Stephanie},
	month = mar,
	year = {2015},
	keywords = {MASS media, MASS media influence, MASS media \& politics, MEDIA effects theory (Communication), NEWS agencies, NEWS audiences, UNITED States},
	pages = {1--21},
	file = {EBSCO Full Text:/Users/catecathryn/Library/Application Support/Firefox/Profiles/6urzo91w.default/zotero/storage/69P88E67/Edgerly - 2015 - Red Media, Blue Media, and Purple Media News Repe.pdf:application/pdf}
